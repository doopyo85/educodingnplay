<!-- 클라이언트에서 누적 회원 수 및 접속자 수 가져오는 스크립트 -->
<script>
    async function loadFooterStats() {
        try {
            const response = await fetch('/api/stats');
            const data = await response.json();
            document.getElementById('totalUsers').textContent = `누적 회원 수: ${data.totalUsers}`;
            document.getElementById('activeUsers').textContent = `현재 접속자 수: ${data.activeUsers}`;
        } catch (error) {
            console.error('Error loading footer stats:', error);
        }
    }

    // 페이지 로드 시 통계 데이터를 가져옵니다.
    window.onload = loadFooterStats;
</script>
