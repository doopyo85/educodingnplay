<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Entry Editor</title>

    <!-- Style sheets -->
    <link href="/js/entry/entry.css" rel="stylesheet" />
    <link href="https://playentry.org/lib/entry-tool/dist/entry-tool.css" rel="stylesheet" />

    <!-- React -->
    <script src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>

    <!-- language -->
    <script type="text/javascript">
        // Lang 네임스페이스 초기화
        var Lang = {
            Blocks: {},
            Workspace: {},
            Menus: {}
        };
        // EntryStatic 네임스페이스 초기화
        var EntryStatic = {
            objectTypes: {},
            fonts: [],
            colorSet: {},
            initOptions: {},
            defaultInitOption: {
                type: 'workspace',
                textCodingEnable: true,
                defaultProject: true
            }
        };
    </script>
    <script src="https://playentry.org/lib/entry-js/extern/lang/ko.js"></script>

    <!-- 의존성 라이브러리들 -->
    <script src="https://playentry.org/lib/lodash/dist/lodash.min.js"></script>
    <script src="https://playentry.org/lib/PreloadJS/lib/preloadjs-0.6.0.min.js"></script>
    <script src="https://playentry.org/lib/EaselJS/lib/easeljs-0.8.0.min.js"></script>
    <script src="https://playentry.org/lib/SoundJS/lib/soundjs-0.6.0.min.js"></script>
    <script src="https://playentry.org/lib/jquery/jquery.min.js"></script>
    <script src="https://playentry.org/lib/jquery-ui/ui/minified/jquery-ui.min.js"></script>
    <script src="https://playentry.org/lib/velocity/velocity.min.js"></script>
    <script src="https://playentry.org/lib/socket.io-client/socket.io.js"></script>
    <script src="https://playentry.org/lib/components-webfontloader/webfontloader.js"></script>

    <!-- Entry 의존성 -->
    <script>
        // 필요한 네임스페이스들 미리 초기화
        window.EntryTool = {};
        window.EntryPaint = {};
        window.EntrySoundEditor = {};
        window.EntryVideoLegacy = {};
    </script>

    <script src="https://playentry.org/lib/entry-tool/dist/entry-tool.js"></script>
    <script src="https://playentry.org/lib/entry-paint/dist/static/js/entry-paint.js"></script>
    <script src="https://entry-cdn.pstatic.net/external/sound/sound-editor.js"></script>
    <script src="https://entry-cdn.pstatic.net/module/legacy-video/index.js"></script>

    <!-- EntryJS 라이브러리 -->
    <script src="/js/entry/entry.js"></script>

    <style>
        html, body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }
        #entryContainer {
            width: 100%;
            height: 100%;
            position: relative;
        }
        #workspace {
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body>
    <div id="entryContainer">
        <div id="workspace">
            <div id="canvas"></div>
            <div id="engineContainer"></div>
            <div id="dataTable"></div>
            <div id="pictureView"></div>
            <div id="soundEditor"></div>
        </div>
    </div>
    
    <script>
        $(document).ready(function() {
            try {
                // 기본 옵션 설정
                var initOption = {
                    type: 'workspace',
                    textCodingEnable: true,
                    defaultProject: true
                };

                // Entry 이벤트 초기화
                Entry.creationChangedEvent = new Entry.Event(window);
                
                // Entry 초기화
                Entry.init(document.getElementById('workspace'), initOption);

                // 프로젝트 파일이 있는 경우 로드
                const projectFile = '<%= projectFile %>';
                if (projectFile) {
                    fetch(projectFile)
                        .then(response => response.json())
                        .then(projectData => {
                            Entry.loadProject(projectData);
                        })
                        .catch(error => {
                            console.error('프로젝트 로드 실패:', error);
                        });
                } else {
                    Entry.loadProject();
                }

                // Entry 시작
                Entry.start();
            } catch (error) {
                console.error('Entry 초기화 오류:', error);
                console.error(error.stack);
            }
        });
    </script>
</body>
</html>