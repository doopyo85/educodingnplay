<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Entry Editor</title>

    <!-- Style sheets -->
    <link href="/js/entry/entry.css" rel="stylesheet" />
    <link href="/js/entry/entry-tool.css" rel="stylesheet" />

    <!-- Base dependencies -->
    <script>
        // Entry 관련 전역 객체 초기화
        window.EntryStatic = {
            fontFamily: "NanumGothic",
            base: '<%= locals.baseUrl || "https://app.codingnplay.co.kr" %>',
            initOptions: {
                type: 'workspace',
                textCodingEnable: true,
                defaultProject: true
            }
        };
        window.EntryTool = {};
        window.EntryPaint = {};
        window.EntrySoundEditor = {};
        window.EntryVideoLegacy = {};
    </script>

    <!-- Libraries -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.21/lodash.min.js"></script>
    <script src="https://code.createjs.com/1.0.0/preloadjs.min.js"></script>
    <script src="https://code.createjs.com/1.0.0/easeljs.min.js"></script>
    <script src="https://code.createjs.com/1.0.0/soundjs.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>

    <!-- Entry components -->
    <script src="/js/entry/entry-tool.js"></script>
    <script src="/js/entry/entry.js"></script>

    <style>
        html, body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }
        #workspace {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: #fff;
        }
    </style>
</head>
<body>
    <div id="workspace">
        <div id="header"></div>
        <div id="container" class="container">
            <div id="board">
                <div class="boardEditor">
                    <div id="canvas"></div>
                    <div id="stage"></div>
                    <div id="engineContainer"></div>
                </div>
                <div id="propertyPanel">
                    <div id="propertyHeader"></div>
                    <div id="propertyContent"></div>
                </div>
                <div id="buttonWrapper"></div>
            </div>
            <div id="dataTable"></div>
            <div id="pictureView"></div>
            <div id="soundEditor"></div>
            <div id="hardwareWindow"></div>
            <div id="expansion"></div>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            try {
                // Entry 인스턴스 생성
                window.entry = new Entry();
                
                // Entry 초기화
                window.entry.init({
                    type: 'workspace',
                    container: 'workspace',
                    textCodingEnable: true,
                    baseUrl: '<%= locals.baseUrl || "https://app.codingnplay.co.kr" %>'
                });

                // 프로젝트 파일이 있는 경우 로드
                const projectFile = '<%= locals.projectFile || "" %>';
                if (projectFile) {
                    fetch(projectFile)
                        .then(response => response.json())
                        .then(project => {
                            window.entry.loadProject(project);
                        })
                        .catch(error => {
                            console.error('프로젝트 로드 실패:', error);
                        });
                } else {
                    window.entry.loadProject();
                }

                // Entry 시작
                window.entry.start();
            } catch (error) {
                console.error('Entry 초기화 오류:', error);
                console.error('Error stack:', error.stack);
            }
        });
    </script>
</body>
</html>