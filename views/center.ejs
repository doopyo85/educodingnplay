<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>교사용 교육 자료</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .video-card {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            padding: 10px;
            border-radius: 8px;
            cursor: pointer;
        }
        .video-card img {
            width: 80px;
            height: 80px;
            margin-right: 15px;
            border-radius: 5px;
        }
        .video-info {
            flex: 1;
        }
        .sidebar {
            width: 25%;
            overflow-y: auto;
            height: 100vh;
            border-right: 1px solid #ddd;
            padding: 15px;
        }
        .content-area {
            width: 75%;
            padding: 15px;
        }
        iframe {
            width: 100%;
            height: 400px;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- 사이드바 (강의 목록) -->
        <div class="sidebar">
            <h3>강의 목록</h3>
            <div id="video-list"></div>
        </div>

        <!-- 메인 콘텐츠 영역 -->
        <div class="content-area">
            <h2 id="video-title">강의를 선택하세요</h2>
            <iframe id="video-frame" src="about:blank"></iframe>
            <p><strong>강의자:</strong> <span id="instructor"></span> | <strong>재생시간:</strong> <span id="duration"></span></p>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            fetch('/api/videos')
                .then(response => response.json())
                .then(videos => {
                    let videoHtml = '';
                    videos.forEach(video => {
                        videoHtml += `
                            <div class="video-card" onclick="showVideo('${video.url}', '${video.title}', '${video.instructor}', '${video.duration}')">
                                <img src="${video.thumbnail}" alt="Thumbnail">
                                <div class="video-info">
                                    <h6>${video.session} - ${video.title}</h6>
                                    <p>${video.activity} | ${video.instructor} | ${video.duration}</p>
                                </div>
                            </div>
                        `;
                    });
                    $('#video-list').html(videoHtml);
                })
                .catch(error => console.error('비디오 데이터 로드 오류:', error));
        });

        function showVideo(url, title, instructor, duration) {
            const embedUrl = url.replace('watch?v=', 'embed/');
            $('#video-frame').attr('src', embedUrl);
            $('#video-title').text(title);
            $('#instructor').text(instructor);
            $('#duration').text(duration);
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
