<!-- views/entry_view.ejs -->
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>Entry 프로젝트 실행</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h2>Entry 프로젝트 실행</h2>
    <div id="entryContainer"></div>

    <!-- EntryJS 라이브러리 (엔트리 프로젝트 실행에 필요한 파일) -->
    <script src="/js/entry/entry.min.js"></script>
    <script>
        // 서버에서 전달된 projectFile 변수 사용
        const projectFile = "<%= projectFile %>";
        if (projectFile) {
            // EntryJS 초기화 및 프로젝트 로드 (프로젝트 환경에 맞게 조정)
            Entry.loadProject({ type: 'workspace', loadProject: { url: projectFile } });
        } else {
            document.getElementById("entryContainer").innerHTML = "<p>프로젝트 파일을 불러올 수 없습니다.</p>";
        }
    </script>
</body>
</html>
