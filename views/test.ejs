<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>코딩앤아카데미 - 쉽게 배우는 프로그래밍</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    
    <!-- Simple Code Editor CSS -->
    <link rel="stylesheet" href="/path/to/simple-code-editor.css">
    <link rel="stylesheet" href="/path/to/themes.css">
    <link rel="stylesheet" href="/path/to/themes-base16.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/public/test.css">
    
    <style>
        code-editor {
            width: 100% !important;
            height: 70vh !important;
        }
    </style>
</head>
<body>
    <div id="app">
        <!-- Your Vue app template here -->
        <div class="main-container">
            <nav class="nav-container">
                <!-- Navigation content -->
            </nav>
            <div class="contents">
                <div class="content-container">
                    <!-- Content here -->
                </div>
                <div class="ide-container">
                    <code-editor 
                        v-if="editorMounted"
                        :theme="editorTheme" 
                        :line-nums="true" 
                        :languages="editorLanguages"
                        :default-language="defaultLanguage"
                        @update:modelValue="onCodeChange">
                    </code-editor>
                    <button @click="runCode" class="btn btn-primary mt-3">Run Code</button>
                    <div id="output-terminal" class="mt-3">
                        <h3>Output:</h3>
                        <pre id="output-content" class="p-3 bg-dark text-light">{{ output }}</pre>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Vue 3 -->
    <script src="https://cdn.jsdelivr.net/npm/vue@3.3.4/dist/vue.global.js"></script>
    
    <!-- Simple Code Editor -->
    <script src="/path/to/simple-code-editor.umd.js"></script>
    
    <!-- Your custom scripts -->
    <script src="/public/header.js"></script>
    <script src="/public/test.js"></script>

    <script>
        const app = Vue.createApp({
            data() {
                return {
                    editorMounted: false,
                    editorTheme: 'vs2015',
                    editorLanguages: [['python', 'Python'], ['cpp', 'C++']],
                    defaultLanguage: 'python',
                    code: '',
                    output: ''
                }
            },
            mounted() {
                this.editorMounted = true;
                this.$nextTick(() => {
                    this.applyCustomStyles();
                });
            },
            methods: {
                onCodeChange(newCode) {
                    this.code = newCode;
                },
                runCode() {
                    this.output = `Running code:\n${this.code}`;
                },
                applyCustomStyles() {
                    const editorElement = this.$el.querySelector('code-editor');
                    if (editorElement) {
                        editorElement.style.setProperty('width', '100%', 'important');
                        editorElement.style.setProperty('height', '70vh', 'important');
                    }
                }
            }
        });

        app.component('code-editor', window.SimpleCodeEditor);
        app.mount('#app');
    </script>
</body>
</html>