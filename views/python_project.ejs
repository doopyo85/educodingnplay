        <!-- Content Area -->
        <div class="contents">
            <!-- Problem Area -->
            <div class="content-container">
                <!-- IDE 토글 스위치 (문제 영역 우측 상단에 배치) -->
                <div id="ide-toggle-switch">
                    <span class="toggle-label">IDE</span>
