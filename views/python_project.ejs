    <!-- 토글 스위치 스타일 -->
    <style>
        /* 토글 스위치 컨테이너 스타일 */
        #ide-toggle-switch {
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 5000;
            display: flex;
            align-items: center;
            background-color: transparent;
            padding: 5px 10px;
            border-radius: 20px;
        }
        
        /* "IDE" 텍스트 스타일 */
        #ide-toggle-switch .toggle-label {
            color: #444444; /* 짙은 회색 */
            font-size: 14px;
            font-weight: bold;
            margin-right: 8px;
        }
        
        /* 토글 스위치 스타일 */
        .switch {
            position: relative;
            display: inline-block;
            width: 40px;
            height: 20px;
        }
        
        /* 실제 체크박스 숨기기 */
        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }
        
        /* 스위치 슬라이더 스타일 */
        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #aaaaaa; /* 회색 */
            transition: .4s;
            border-radius: 34px;
        }
        
        .slider:before {
            position: absolute;
            content: "";
            height: 16px;
            width: 16px;
            left: 2px;
            bottom: 2px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }
        
        input:checked + .slider {
            background-color: #666666; /* 짙은 회색 */
        }
        
        input:checked + .slider:before {
            transform: translateX(20px);
        }
        
        /* 네비게이션 메뉴 너비 고정 */
        .nav-container {
            width: 250px !important;
            min-width: 250px !important;
            max-width: 250px !important;
            flex-shrink: 0 !important;
        }
        
        /* IDE 컨테이너 스타일 */
        .ide-container {
            position: relative !important;
            transition: all 0.3s ease;
            background-color: #1e1e1e;
        }

        /* 문제 컨테이너 스타일 */
        .content-container {
            position: relative;
            transition: all 0.3s ease;
        }
        
        /* 접힌 상태에서 컨텐츠 숨기기 */
        .collapsed-editor .ide-container > *:not(#ide-toggle-switch) {
            display: none !important;
        }

        .collapsed-editor .ide-container {
            width: 0 !important;
            min-width: 0 !important;
            padding: 0 !important;
            margin: 0 !important;
            border: none !important;
            flex: 0 !important;
        }

        .collapsed-editor .content-container {
            width: calc(100% - 250px) !important; /* 왼쪽 네비게이션(250px) 고려 */
            flex: 1 !important;
        }

        /* 확장된 상태 스타일 */
        .expanded-editor .ide-container {
            width: 45% !important;
            flex: 0.9 !important;
            padding: 15px !important;
        }

        .expanded-editor .content-container {
            width: calc(55% - 250px) !important; /* IDE(45%)와 왼쪽 네비게이션(250px) 고려 */
            flex: 1.1 !important;
        }
    </style>

